{% extends 'base.html.twig' %}

{% block title %}Checklist{% endblock %}

{% block body %}
    <h1>{{ checklist.name }}</h1>

    <div class="my-3 p-3 border">
        <p>Add a new item to your checklist:</p>

        {{ form_start(form)}}
        <div class="mb-3">
            {{ form_row(form.name) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.description) }}
        </div>
            
        {{ form_end(form)}}

    </div>

    <div id="itemlist" class="my-3">
        <ul class="list-group">
            {% for i in allItems %}
                <li class="list-group-item list-group-item-primary d-flex justify-content-between align-items-center">
                    <p>{{i.name}} - {{ i.description }} - <a class="btn btn-primary" href="{{ path('app_checklist_delete_item', {'id': i.id}) }}" >Remove <i class="fa-solid fa-xmark"></i></a></p>
                </li>
            {% endfor %}
        </ul>
    </div>
    
    <div class="mb-3">
    <a class="btn btn-primary" href="{{ path('app_checklist_index') }}"><i class="fa-solid fa-arrow-left"></i> Back to my checklists</a>
    </div>

    <div class="mb-3">
    <a class="btn btn-primary" href="{{ path('app_checklist_edit', {'id': checklist.id}) }}">Edit <i class="fa-solid fa-pen"></i></a>
    </div>

    <div class="btn btn-secondary">
    {{ include('checklist/_delete_form.html.twig') }}
    </div>
{% endblock %}
